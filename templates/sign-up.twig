
{% extends "base.twig" %}

{% block title %}Sign-up | PixSalle{% endblock %}

{% block content %}
  <div class="jumbotron">
    <h1 class="display-4">Sign up here!</h1>
    <p class="lead">A brief description of what PixSalle is.</p>
    <hr class="my-4">
    <p>Please enter your credentials to sign up.</p>
     <form data-cy="sign-up" action="{{ formAction }}" method="POST">
      <div class="form-group">
        <input data-cy="sign-up__email" type="text" name="email" placeholder="Enter your email">
        {% if formErrors['email'] %}
          <p data-cy="sign-up__wrongEmail" class="text-danger">{{ formErrors['email'] }}</p>
        {% endif %}
      </div>
      <div class="form-group">
        <input data-cy="sign-up__password" type="password" name="password" placeholder="Enter your password">
        {% if formErrors['password'] %}
          <p data-cy="sign-up__wrongPassword" class="text-danger">{{ formErrors['password'] }}</p>
        {% endif %}
      </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="termsCheck">
        <label class="form-check-label" for="termsCheck">I accept the terms and conditions.</label>
      </div>
      <input data-cy="sign-up__btn" class="btn btn-primary" type="submit" value="Sign-up">
    </form>
  </div>
{% endblock %}
